{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@platform-core/*": ["packages/platform-core/src/*"],
      "@platform-forms/*": ["packages/platform-forms/src/*"],
      "@design-system/*": ["packages/design-system/src/*"],
      "@features/*": ["features/*/src"]
    }
  }
}