{
  "name": "@platform-core",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./api/*": {
      "import": "./dist/api/*.js",
      "types": "./dist/api/*.d.ts"
    },
    "./auth/*": {
      "import": "./dist/auth/*.js",
      "types": "./dist/auth/*.d.ts"
    },
    "./state/*": {
      "import": "./dist/state/*.js",
      "types": "./dist/state/*.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest --root ./"
  },
  "dependencies": {
    "zustand": "^4.5.5"
  },
  "peerDependencies": {
    "zustand": ">=4.4.0"
  }
}